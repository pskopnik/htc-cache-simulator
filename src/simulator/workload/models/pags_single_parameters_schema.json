{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://simulator/workload/models/pags_single_parameters_schema.json",
    "type": "object",
    "required": [
        "root",
        "computing"
    ],
    "properties": {
        "root": {
            "type": "object",
            "required": [
                "size",
                "file_size",
                "schedule"
            ],
            "properties": {
                "size": {
                    "$ref": "#/$defs/bytes_size"
                },
                "file_size": {
                    "$ref": "#/$defs/bytes_size"
                },
                "schedule": {
                    "type": "object",
                    "required": [
                        "normal_distribution"
                    ],
                    "properties": {
                        "normal_distribution": {
                            "type": "object",
                            "required": [
                                "mu",
                                "sigma"
                            ],
                            "properties": {
                                "mu": {
                                    "type": "number"
                                },
                                "sigma": {
                                    "type": "number"
                                }
                            },
                            "additionalProperties": false
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        },
        "computing": {
            "type": "object",
            "required": [
                "node_spread",
                "read_fraction",
                "job_read_size",
                "schedule"
            ],
            "properties": {
                "node_spread": {
                    "type": "integer",
                    "minimum": 0
                },
                "read_fraction": {
                    "$ref": "#/$defs/fraction"
                },
                "job_read_size": {
                    "$ref": "#/$defs/bytes_size"
                },
                "schedule": {
                    "type": "object",
                    "required": [
                        "normal_distribution"
                    ],
                    "properties": {
                        "normal_distribution": {
                            "type": "object",
                            "required": [
                                "mu",
                                "sigma"
                            ],
                            "properties": {
                                "mu": {
                                    "type": "number"
                                },
                                "sigma": {
                                    "type": "number"
                                }
                            },
                            "additionalProperties": false
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false,
    "$defs": {
        "bytes_size": {
            "type": "string",
            "pattern": "^\\d+(\\.\\d+)? ([KMGTPEZY]?i)?B$"
        },
        "bytes_rate": {
            "type": "string",
            "pattern": "^\\d+(\\.\\d+)? ([KMGTPEZY]?i)?B\\/s$"
        },
        "fraction": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0
        }
    }
}
